{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://marketplace.svrnty.com/schemas/plugin-entry.schema.json",
  "title": "Plugin Entry Schema",
  "description": "Schema for individual plugin metadata in the marketplace",
  "type": "object",
  "required": ["id", "name", "slug", "version", "description", "author", "repository"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Unique plugin identifier"
    },
    "name": {
      "type": "string",
      "maxLength": 100,
      "description": "Human-readable plugin name"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "URL-friendly identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Current version (semver)"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Short description (one sentence)"
    },
    "long_description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Detailed description (1-2 paragraphs)"
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "repository": {
      "type": "object",
      "required": ["type", "url"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["git", "svn", "mercurial"]
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "documentation": {
      "type": "string",
      "format": "uri"
    },
    "bugs": {
      "type": "string",
      "format": "uri"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "maxItems": 20
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*$"
      },
      "minItems": 1,
      "maxItems": 5
    },
    "platform": {
      "type": "object",
      "properties": {
        "min_claude_code_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "supported_platforms": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["darwin", "linux", "win32"]
          }
        },
        "supported_architectures": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["x64", "arm64", "x86"]
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/dependency"
          }
        },
        "optional": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/dependency"
          }
        }
      }
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          }
        }
      }
    },
    "commands": {
      "type": "object",
      "properties": {
        "count": {
          "type": "integer",
          "minimum": 0
        },
        "list": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "assets": {
      "type": "object",
      "properties": {
        "icon": {
          "type": "string",
          "format": "uri"
        },
        "banner": {
          "type": "string",
          "format": "uri"
        },
        "screenshots": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["url", "caption"],
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "caption": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["screenshot", "diagram", "video"]
              }
            }
          }
        },
        "demo": {
          "type": "object",
          "required": ["url"],
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "caption": {
              "type": "string"
            }
          }
        }
      }
    },
    "stats": {
      "type": "object",
      "properties": {
        "downloads": {
          "type": "integer",
          "minimum": 0
        },
        "stars": {
          "type": "integer",
          "minimum": 0
        },
        "rating": {
          "type": "number",
          "minimum": 0,
          "maximum": 5
        },
        "reviews": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["alpha", "beta", "stable", "deprecated"]
    },
    "verified": {
      "type": "boolean"
    },
    "featured": {
      "type": "boolean"
    },
    "added_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "changelog_url": {
      "type": "string",
      "format": "uri"
    }
  },
  "definitions": {
    "dependency": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
